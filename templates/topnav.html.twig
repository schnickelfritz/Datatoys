<div class="app-topnav-box">
    <nav>
        <ul class="nav nav-pills justify-content-center">
            <twig:NavItem route="app_home" label="Home"/>
            {% if is_granted('ROLE_USERMANAGER') or is_granted('ROLE_ADMIN') %}
                <twig:NavItem routePrefix="app_admin" label="Admin" icon="gear-wide-connected" />
            {% endif %}
            {% if app.user %}
                <twig:NavItem route="app_logout" label="Logout" icon="power" />
            {% else %}
                <twig:NavItem route="app_login" label="Login" icon="lamp" />
            {% endif %}
        </ul>
    </nav>
</div>
{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} :: {{ 'admin.candidate.list.title'|trans }}{% endblock %}
{% block body %}
    <twig:Box>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th scope="col">{{ 'admin.candidate.label.actions'|trans }}</th>
                <th scope="col">{{ 'admin.candidate.label.name'|trans }}</th>
                <th scope="col">{{ 'admin.candidate.label.email'|trans }}</th>
                <th scope="col">{{ 'admin.candidate.label.roles'|trans }}</th>
                <th scope="col">{{ 'admin.candidate.label.created_at'|trans }}</th>
            </tr>
            </thead>
            <tbody class="table-group-divider">
            {% for user in users %}
                <tr
                        class="{% if user_selected|default() and user_selected.id == user.id %}table-active{% endif %}"
                >
                    <th scope="row">
                        <a href="{{ path('app_admin_user_candidate_create') }}" class="btn btn-primary">
                            <span class="bi-pencil"></span>
                        </a>
                    </th>
                    <td>{{ user.name }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles|join(' | ') }}</td>
                    <td>{{ user.createdAt|date('d.m.y H:i') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </twig:Box>
{% endblock %}
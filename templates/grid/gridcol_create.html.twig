{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} :: {{ 'grid.col.create.title'|trans }}{% endblock %}
{% block topsubnav %}{{ include('grid/_gridnav.html.twig') }}{% endblock %}
{% block body %}
    <twig:Box>
        <twig:Row rowClass="mb-4">
            <h1 class="h3"><twig:Icon name="bookmarks-fill" />{{ 'grid.col.create.title'|trans }}</h1>
        </twig:Row>
        <twig:FormStart form="{{ form_cols }}"/>
        <twig:FormRow field="{{ form_cols.names }}"/>
        <twig:ButtonsRow
                rowClass="pt-3"
                icon="plus-circle"
                field="{{ form_cols.submit }}"
        />
        {{ form_end(form_cols) }}
    </twig:Box>
    <twig:Box>
        <twig:Row label="grid.col.list.title">
            {{ include('grid/_col_list.html.twig') }}
        </twig:Row>
    </twig:Box>
{% endblock %}

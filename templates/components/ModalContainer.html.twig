<div
        class="modal fade"
        id="modal{{ id }}"
        tabindex="-1"
        aria-labelledby="modal{{ id }}Label"
        aria-hidden="true"
>
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="modal{{ id }}Label">{{ title }}</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="{{ 'modal.close'|trans }}"></button>
            </div>
            <div class="modal-body">
                {% block content %}
                    {{ 'modal.content'|trans }}MÃ¶chtest du fortfahren?
                {% endblock %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    {{ close|default('modal.cancel'|trans) }}
                </button>
            </div>
        </div>
    </div>
</div>